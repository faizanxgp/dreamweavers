# ============================================
# Dream Interpreter - Environment Configuration
# ============================================

# Environment
ENVIRONMENT=development
DEBUG=True

# ============================================
# Database Configuration
# ============================================
POSTGRES_SERVER=postgres
POSTGRES_USER=dream_user
POSTGRES_PASSWORD=dream_password_change_in_production
POSTGRES_DB=dream_interpreter
POSTGRES_PORT=5433

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Ollama LLM Configuration
# ============================================
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=120

# ============================================
# Security Configuration
# ============================================
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION-use-openssl-rand-base64-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS Configuration
# ============================================
BACKEND_CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
ALLOWED_HOSTS=*

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:8001/api/v1
API_V1_PREFIX=/api/v1

# ============================================
# File Upload Configuration
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# ============================================
# PgAdmin Configuration (Optional - for development)
# ============================================
PGADMIN_EMAIL=admin@dreaminterpreter.com
PGADMIN_PASSWORD=admin

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Custom Ports (Docker Compose)
# ============================================
# These are the external ports exposed by Docker
# Adjust if you have conflicts with other services
POSTGRES_EXTERNAL_PORT=5433
REDIS_EXTERNAL_PORT=6380
BACKEND_EXTERNAL_PORT=8001
FRONTEND_EXTERNAL_PORT=3001
PGADMIN_EXTERNAL_PORT=5051
